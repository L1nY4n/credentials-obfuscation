{minimum_otp_vsn, "20.3"}.
{erl_opts, [debug_info]}.
{deps, [ ]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [credentials_obfuscation]}
]}.

{dialyzer, [
    {warnings, [error_handling, race_conditions, unmatched_returns]}
]}.

{xref_extra_paths, ["test"]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    % exports_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{licenses, ["MPL-1.1", "Apache-2.0"]}.
{links, [{"GitHub", "https://github.com/rabbitmq/credentials_obfuscation"}]}.
